<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/share_friend_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/share_friend_image"
            android:layout_width="@dimen/item_size"
            android:layout_height="@dimen/item_size"
            android:contentDescription="@string/share_friend_image"
            android:src="@drawable/stalker" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/share_gray_background"
        style="@style/shareGrayBackground"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/share_friend_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_user_name"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share_friend_card_view" />

</androidx.constraintlayout.widget.ConstraintLayout>